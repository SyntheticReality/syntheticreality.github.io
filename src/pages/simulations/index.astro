---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import ContactForm from "@/components/ContactForm.astro";
import Hero from "@/components/Hero.astro";
import Section2 from "@/components/Simulations/Section2.astro";
import Section3 from "@/components/Simulations/Section3.astro";
import Section4 from "@/components/Simulations/Section4.astro";

const title = "Simulations";

const description =
  "Experts in developing gaming, simulation, and educational VR/AR projects.";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body>
    <Header />
    <main>
      <Hero
        title="Real world training in"
        titleAccent="virtual scenarios"
        description1="Enhance safety, proficiency, and preparedness for your company:"
        descriptionAccent="virtually and risk-free."
        image="/simulations/hero.png"
      />

      <Section2 />

      <Section3 />

      <Section4 />

      <ContactForm />
    </main>
    <Footer />
  </body>
</html>
