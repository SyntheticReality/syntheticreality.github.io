---
const {
  title,
  titleAccent,
  largeTitle,
  description1,
  descriptionAccent,
  description2,
  image,
  video,
} = Astro.props;
---

<section class="max-w-[59rem] mx-auto px-4 py-12 xl:py-16">
  <div
    class="space-y-12 md:space-y-14 lg:space-y-0 lg:flex lg:justify-between lg:items-center lg:min-h-[340px]"
  >
    <div class="text-center space-y-3 md:space-y-5 xl:space-y-8 lg:text-start">
      <h1
        class:list={[
          "text-2xl md:text-4xl max-w-[20ch] md:max-w-[30ch] mx-auto xl:text-5xl font-bold lg:mx-0 text-pretty",
          { "lg:max-w-[18ch]": largeTitle, "lg:max-w-[15ch]": !largeTitle },
        ]}
      >
        {title}
        <span class="bg-gradient bg-clip-text text-transparent italic pr-1"
          >{titleAccent}</span
        >
      </h1>
      <div
        class="md:text-lg flex justify-center gap-1 flex-wrap items-center xl:text-xl lg:max-w-[35ch]"
      >
        <p>
          {description1}
          <span class="font-bold">{descriptionAccent}</span>
          {description2 || ""}
        </p>
      </div>

      <a
        href="#"
        class="block w-fit bg-gradient text-white rounded-full relative font-semibold px-4 py-1 md:text-lg md:px-5 xl:text-xl xl:py-1.5 xl:px-6 transition-all hover:-top-1 top-0 hover:brightness-110 text-center mx-auto lg:mx-0"
      >
        Letâ€™s talk!
      </a>
    </div>
    <div class="">
      {
        image && (
          <img
            class="mx-auto max-w-[240px] md:max-w-full animate-bounce-slow top-[9px] relative lg:mx-0 lg:ms-auto"
            src={image}
            alt="Hero"
          />
        )
      }
      {
        video && (
          <iframe
            class="mx-auto max-w-[400px] lg:w-[400px] w-full lg:mx-0 lg:ms-auto aspect-video rounded-xl"
            src={video}
            title="Hero"
          />
        )
      }
    </div>
  </div>
</section>
