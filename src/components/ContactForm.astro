<section class="max-w-6xl mx-auto px-4 py-12">
  <div class="space-y-8">
    <div class="text-center space-y-3 md:space-y-5 xl:space-y-8">
      <h2
        class="text-2xl xl:text-3xl font-bold max-w-[25ch] mx-auto md:max-w-[30ch]"
      >
        Contact us, we'll get back
        <span class="bg-gradient bg-clip-text text-transparent italic pr-1">
          shortly
        </span>
      </h2>
    </div>

    <form
      action="https://syry.us21.list-manage.com/subscribe/post?u=fbf0a63ae1b88e28646525eb8&id=6b99444b37&f_id=00f0efe6f0"
      class="space-y-8 px-4"
      method="post"
      id="mc-embedded-subscribe-form"
      name="mc-embedded-subscribe-form"
      target="_self"
      novalidate=""
    >
      <div class="max-w-lg mx-auto space-y-4 w-full md:space-y-5">
        <div
          class="flex flex-col md:flex-row justify-between md:items-center md:gap-4 gap-1 w-full"
        >
          <label for="mce-NAME">Name</label>
          <input
            name="NAME"
            id="mce-NAME"
            type="text"
            class="w-full border rounded-xl px-2 py-1 border-black md:max-w-[350px]"
          />
        </div>

        <div
          class="flex flex-col md:flex-row justify-between md:items-center md:gap-4 gap-1 w-full"
        >
          <label for="mce-EMAIL">Email</label>
          <input
            name="EMAIL"
            id="mce-EMAIL"
            type="email"
            required
            class="w-full border rounded-xl px-2 py-1 border-black md:max-w-[350px]"
          />
        </div>

        <div
          class="flex flex-col md:flex-row justify-between md:items-center md:gap-4 gap-1 w-full"
        >
          <label for="mce-MESSAGE">Message</label>
          <textarea
            name="MESSAGE"
            id="mce-MESSAGE"
            class="w-full border rounded-xl px-2 py-1 border-black md:max-w-[350px] min-h-[100px]"
          ></textarea>
        </div>
      </div>
      <button
        type="submit"
        name="subscribe"
        id="mc-embedded-subscribe"
        class="bg-gradient text-white rounded-full px-4 py-1 md:text-lg md:px-5 mx-auto block font-semibold transition-all top-0 hover:-top-1 relative hover:brightness-110"
      >
        Submit
      </button>

      <div hidden="">
        <input type="hidden" name="tags" value="2968973" />
      </div>
      <div id="mce-responses" class="clear foot">
        <div class="response" id="mce-error-response" style="display: none;">
        </div>
        <div class="response" id="mce-success-response" style="display: none;">
        </div>
      </div>
      <div aria-hidden="true" style="position: absolute; left: -5000px;">
        <input
          type="text"
          name="b_fbf0a63ae1b88e28646525eb8_6b99444b37"
          tabindex="-1"
        />
      </div>
    </form>
  </div>
